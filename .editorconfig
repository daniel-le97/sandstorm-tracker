# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# TypeScript and JavaScript files
[*.{ts,js,mts,cts}]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package files
[package.json]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
end_of_line = lf
indent_size = 2

# Windows batch files
[*.{cmd,bat}]
end_of_line = crlf
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Environment files
[.env*]
insert_final_newline = true
trim_trailing_whitespace = true

# Test files
[*.test.{ts,js}]
indent_size = 4
